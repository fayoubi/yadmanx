# ================================================
# LLM Quote Service - Environment Variables
# ================================================
# Copy this file to .env and fill in your values
#
# REQUIRED FOR DOCKER:
#   - CLAUDE_API_KEY (must be set in .env)
#   - CLAUDE_MODEL (must be set in .env)
#
# OPTIONAL: Other variables below are already set in docker-compose.yml
# Only override them here if you need custom values
# ================================================

# Claude API Configuration (REQUIRED - Must be in .env file)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-haiku-20241022

# Server Configuration (Optional - docker-compose sets these)
PORT=3004
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000
CLAUDE_MAX_TOKENS=1024
CLAUDE_TEMPERATURE=0.7

# Pricing Service Configuration
PRICING_SERVICE_URL=http://pricing-service:3001
PRICING_SERVICE_TIMEOUT=10000

# Redis Configuration
REDIS_HOST=llm-quote-redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
SESSION_TTL=1800

# PostgreSQL Configuration
POSTGRES_HOST=llm-quote-db
POSTGRES_PORT=5432
POSTGRES_DB=llm_quotes
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_MAX_CONNECTIONS=20

# Conversation Settings
MAX_FIELD_RETRIES=2
DEFAULT_COVERAGE_AMOUNT=500000
QUOTE_EXPIRY_HOURS=48

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
